      <script>

        $('.postDelete_check').click(function(e){
          
          var deleteFor = e.target.dataset.object; // 이벤트의 주체안에 다른 태그가 없어야 함
          //var deleteFor = 1 // 여기 데이터 바인딩이 문제.
          console.log(deleteFor)

          $.ajax ({

            method : 'DELETE',
            url : '/thread/deletead/'+deleteFor,
            data : {postId : deleteFor}


          }).done (function(rep){
            alert(rep.result);
            location.reload();
          })
          
        })

      </script>
        

        
