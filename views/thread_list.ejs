<!doctype html>
<html lang="en">
  <head>
   
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

    <link rel = "stylesheet" type="text/css" href= "public/css/thread.css">
    <title>스레드 목록</title>
  </head>
  <body>
    <%- include('nav.ejs') %>

      스레드 목록
    <div class = "thread_box" >

      <% for (var i =0; i < threads_info.length; i++){ %>

      <div class = "thread_search" >
      <div class = "thread_title">
      <a href = "thread<%= threads_info[i].thread_id %>">  
      <%= threads_info[i].thread_name%> 스레드</a>  </div><b>&nbsp&nbsp|</b>
      <div class = "thread_context"><%= threads_info[i].thread_context%></div><b>&nbsp&nbsp|</b>
      <div class = "thread_member">참가자: <%=threads_info[i].thread_usrNum%> </div><b>&nbsp&nbsp|</b>
      <div class = "thread_admin">관리자 : <%=threads_info[i].usr_id%></div><b>&nbsp&nbsp|</b>
      <span class = "thread_enter<%=threads_info[i].thread_id%>" id ="thread_enter" data-id="<%=threads_info[i].thread_id%>">참가</span> 
     
      
      </div>
      <% } %>
    </div>

    <script>
     
      $(document).ready(function(){

        $.ajax ({
          method : 'POST',
          url : '/thread/threadJoinFunc'
        }).done(function(rep){
          if ( rep.result == "ok"){
          for (var y = 1; y<= rep.threadPage; y++){
          for (var i = 0; i< rep.threadNum.length; i++){ //threadNum = 유저 스레드 데이터 , 스레드의 최대값이 필요함.
            //var datab = '<%=threads_info[0].thread_id%>';
            var datab = $(".thread_enter"+y).data('id');
            console.log (parseInt(datab));
            if (rep.threadNum[i] == parseInt(datab)){

              $('.thread_enter'+datab).html("탈퇴");
            }
            else { console.log(rep.threadNum[i] + " 는" +parseInt(datab))}

          }
        }

      }
        })
      
      })
    </script>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>


    
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js" integrity="sha384-eMNCOe7tC1doHpGoWe/6oMVemdAVTMs2xqW4mwXrXsW0L84Iytr2wi5v2QjrP/xp" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js" integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/" crossorigin="anonymous"></script>
    
  </body>
</html>