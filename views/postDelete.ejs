                method : 'POST',
                url : '/thread/delete/<%=postId%>',
                data : { postId : "<%=postId%>"
                          } // 123을 /delete 경로로 보낸다. , req.body로 받는다. , 즉 위의 postoren이 server.js의 req.body._id가 됨.
            // _id_a 는 오브젝트id 
                
            }).done(function(rep){
            alert(rep.result);
            location.replace('../thread<%=threadId%>');
           
            })

        })

    </script>

